<!-- Grid yapısını zorlayan ve sticky menüyü iyileştiren JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Grid yapısını zorlayan fonksiyon
        function enforceGridLayout() {
            const container = document.querySelector('.sayfa-duzeni');
            if (container) {
                if (window.innerWidth >= 768) { // Sadece masaüstü görünümde
                    container.style.display = 'grid';
                    container.style.gridTemplateColumns = '25% 75%';
                    
                    // Sol menü sticky pozisyonunu kontrol et
                    const solMenu = document.querySelector('.sol-menu');
                    if (solMenu) {
                        solMenu.style.position = 'sticky';
                        solMenu.style.top = '80px';
                    }
                } else {
                    // Mobil görünümde grid'i devre dışı bırak
                    container.style.display = 'block';
                    
                    const solMenu = document.querySelector('.sol-menu');
                    if (solMenu) {
                        solMenu.style.position = 'relative';
                        solMenu.style.top = '0';
                    }
                }
            }
        }
        
        // Aktif menü bağlantısını güncelle
        function setActiveMenuLink() {
            const menuLinks = document.querySelectorAll('.sol-menu-liste a');
            const sections = document.querySelectorAll('[id^="hizmetin-"], [id^="kimler-"], [id^="basvuru-"], [id^="standart-"], [id^="islem-"], [id^="ucretler"], [id^="diger-"], [id^="haberler"]');
            
            // Hangi bölümün görünür olduğunu kontrol et
            let currentSectionId = null;
            let maxVisibleHeight = 0;
            
            sections.forEach(section => {
                const rect = section.getBoundingClientRect();
                const visibleHeight = Math.min(rect.bottom, window.innerHeight) - Math.max(rect.top, 0);
                
                if (visibleHeight > 0 && visibleHeight > maxVisibleHeight) {
                    maxVisibleHeight = visibleHeight;
                    currentSectionId = '#' + section.id;
                }
            });
            
            // Menü bağlantılarını güncelle
            if (currentSectionId) {
                menuLinks.forEach(link => {
                    link.classList.remove('aktif');
                    if (link.getAttribute('href') === currentSectionId) {
                        link.classList.add('aktif');
                        
                        // Aktif bağlantıyı görünür alana kaydır
                        const solMenu = document.querySelector('.sol-menu');
                        if (solMenu && window.innerWidth >= 768) {
                            const linkRect = link.getBoundingClientRect();
                            const menuRect = solMenu.getBoundingClientRect();
                            
                            if (linkRect.top < menuRect.top || linkRect.bottom > menuRect.bottom) {
                                link.scrollIntoView({ behavior: 'smooth', block: 'center' });
                            }
                        }
                    }
                });
            }
        }
        
        // Sayfa yüklendiğinde ve kaydırıldığında aktif menü bağlantısını güncelle
        window.addEventListener('load', setActiveMenuLink);
        
        // Kaydırma işlemini optimize etmek için throttle fonksiyonu
        let scrollTimeout;
        window.addEventListener('scroll', function() {
            if (!scrollTimeout) {
                scrollTimeout = setTimeout(function() {
                    setActiveMenuLink();
                    scrollTimeout = null;
                }, 100);
            }
        });
        
        // Menü öğelerine tıklama olayı
        const menuLinks = document.querySelectorAll('.sol-menu-liste a');
        menuLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    // Tüm aktif sınıflarını kaldır
                    menuLinks.forEach(menuLink => menuLink.classList.remove('aktif'));
                    
                    // Tıklanan bağlantıya aktif sınıfı ekle
                    this.classList.add('aktif');
                    
                    // Hedef bölüme yumuşak bir şekilde kaydır
                    const headerOffset = 100;
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
                    
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Sayfa boyutu değiştiğinde grid yapısını zorla
        window.addEventListener('resize', function() {
            enforceGridLayout();
        });
        
        // İlk yüklemede grid yapısını zorla
        enforceGridLayout();
        
        // Sayfa tamamen yüklendiğinde tekrar grid yapısını kontrol et
        window.addEventListener('load', function() {
            enforceGridLayout();
            
            // Sticky pozisyonun düzgün çalışması için layout'u zorla
            setTimeout(function() {
                const solMenu = document.querySelector('.sol-menu');
                if (solMenu && window.innerWidth >= 768) {
                    // Force reflow
                    void solMenu.offsetHeight;
                    solMenu.style.position = 'sticky';
                    solMenu.style.position = '-webkit-sticky';
                }
            }, 100);
        });
    });
</script>
@endsection 